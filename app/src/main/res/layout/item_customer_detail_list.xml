<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="textRUN2202,textRUN23"
            tools:layout_editor_absoluteX="74dp" />
        <!--품번-->
        <TextView
            android:id="@+id/tvRUN2201"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#4574be"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="수 취 인" />
        <!--품명-->
        <TextView
            android:id="@+id/tvRUN09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#616161"
            android:textSize="14sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="@+id/tvRUN2201"
            app:layout_constraintTop_toBottomOf="@+id/tvRUN2201"
            tools:text="제 품 명" />


        <TextView
            android:id="@+id/textRUN2202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:letterSpacing="0.1"
            android:text="연 락 처"
            android:textColor="#9e9e9e"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tvRUN09"
            app:layout_constraintTop_toBottomOf="@+id/tvRUN09" />

        <TextView
            android:id="@+id/tvRUN2202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="010-1234-4564"
            android:textColor="#616161"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/textRUN2202"
            app:layout_constraintStart_toEndOf="@+id/barrier"
            app:layout_constraintTop_toTopOf="@+id/textRUN2202" />

        <TextView
            android:id="@+id/textRUN04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="내       용"
            android:textColor="#9e9e9e"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textRUN2202"
            app:layout_constraintTop_toBottomOf="@+id/tvRUN2202" />

        <TextView
            android:id="@+id/tvRUN04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="내용"
            android:textColor="#616161"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/textRUN04"
            app:layout_constraintStart_toEndOf="@id/barrier"
            app:layout_constraintTop_toTopOf="@+id/textRUN04" />


        <TextView
            android:id="@+id/textRUN23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="오청사항"
            android:textColor="#9e9e9e"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textRUN04"
            app:layout_constraintTop_toBottomOf="@+id/tvRUN04" />

        <TextView
            android:id="@+id/tvRUN23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="요청사항 "
            android:textColor="#616161"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/textRUN23"
            app:layout_constraintStart_toEndOf="@id/barrier"
            app:layout_constraintTop_toTopOf="@+id/textRUN23" />


        <TextView
            android:id="@+id/textRUN07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="주문금액"
            android:textColor="#9e9e9e"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textRUN23"
            app:layout_constraintTop_toBottomOf="@+id/tvRUN23" />

        <TextView
            android:id="@+id/tvRUN07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="10,000,000 "
            android:textColor="#616161"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/textRUN07"
            app:layout_constraintStart_toEndOf="@id/barrier"
            app:layout_constraintTop_toTopOf="@+id/textRUN07" />


        <TextView
            android:id="@+id/tvRUN02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-11-05"
            android:textColor="#616161"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/textRUN07"
            app:layout_constraintEnd_toStartOf="@+id/imgView"
            app:layout_constraintTop_toTopOf="@+id/textRUN07" />


        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="#bdbdbd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRUN07" />




        <ImageView
            android:id="@+id/imgView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/next_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>