    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="#4574be"
        android:maxLines="1"
        android:layout_marginStart="16dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:maxLength="15"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/textDAH"
        app:layout_constraintBottom_toBottomOf="@id/textDAH"
        app:layout_constraintTop_toTopOf="@+id/textDAH"
        tools:text="제품명" />



    <TextView
        android:id="@+id/tvDAH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#616161"
        android:textSize="14dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/textDAH02"
        app:layout_constraintBottom_toBottomOf="@+id/textDAH02"
        app:layout_constraintStart_toStartOf="@+id/tvProductName"
        tools:text="no.품목번호" />

    <TextView
        android:id="@+id/tvCDO03"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="#9e9e9e"
        android:textSize="14dp"
        android:maxLines="1"
        android:layout_marginStart="2dp"
        android:ellipsize="end"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/textDAH02"
        app:layout_constraintBottom_toBottomOf="@+id/textDAH02"
        app:layout_constraintStart_toEndOf="@+id/tvDAH"
        tools:text="(활전복)" />


    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#616161"
        android:textSize="14dp"
        android:maxLength="17"
        android:ellipsize="end"
        android:textStyle="normal"

        app:layout_constraintTop_toTopOf="@+id/tvTextPrice"
        app:layout_constraintStart_toStartOf="@+id/tvDAH"
        app:layout_constraintBottom_toBottomOf="@+id/tvTextPrice"


        tools:text="0 원" />


    <!-- 발주일자 text -->

    <TextView
        android:id="@+id/tvTextPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="금    액"
        android:layout_marginEnd="5dp"
        android:textColor="#9e9e9e"
        android:textSize="14dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textDAH02"
        />

    <TextView
        android:id="@+id/tvRunDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="#9e9e9e"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPrice"
        app:layout_constraintBottom_toBottomOf="@+id/tvPrice"
        tools:text="YYYY-DD-MM" />


