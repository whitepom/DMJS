<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/shape_round10_white"
    android:elevation="1dp"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/textCLT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"

        android:layout_marginTop="8dp"
        android:textColor="#9e9e9e"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="주  문  자" />




    <!-- 발주일자 text -->

    <TextView
        android:id="@+id/tvCLT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#4574be"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textCLT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvRunDate"
        app:layout_constraintTop_toTopOf="@+id/textCLT"
        tools:text="거래처명" />





    <TextView
        android:id="@+id/tvRunDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#9e9e9e"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvTextDate"
        app:layout_constraintTop_toTopOf="@+id/tvTextDate"
        app:layout_constraintBottom_toBottomOf="@+id/tvTextDate"
        tools:text="YYYY-MM-DD" />



    <TextView
        android:id="@+id/tvTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#9e9e9e"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textCLT"
        app:layout_constraintStart_toStartOf="@+id/textCLT"
        android:text="최근출고" />



</androidx.constraintlayout.widget.ConstraintLayout>