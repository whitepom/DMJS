<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"

            app:constraint_referenced_ids="textNGG08,textNGG06,textNGG0901,textNGGK04"
            tools:layout_editor_absoluteX="3dp" />
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"


            app:constraint_referenced_ids="btn"
            tools:layout_editor_absoluteX="3dp" />

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="품목명"/>

        <TextView
            android:id="@+id/textNGG08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="박스당중량 "

            android:textSize="14sp"
            android:textColor="#9e9e9e"
            app:layout_constraintStart_toStartOf="@+id/tvProductName"
            app:layout_constraintTop_toBottomOf="@+id/tvProductName" />

        <TextView
            android:id="@+id/tvNGG08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textColor="#616161"

            app:layout_constraintTop_toTopOf="@+id/textNGG08"
            app:layout_constraintStart_toEndOf="@+id/barrier" />
        <TextView
            android:id="@+id/textNGG06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="박스수량"
            android:textSize="14sp"
            android:textColor="#9e9e9e"
            app:layout_constraintStart_toStartOf="@+id/textNGG08"
            app:layout_constraintTop_toBottomOf="@+id/textNGG08" />

        <TextView
            android:id="@+id/tvNGG06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="#616161"
            app:layout_constraintTop_toTopOf="@+id/textNGG06"
            app:layout_constraintStart_toEndOf="@+id/barrier" />
        <TextView
            android:id="@+id/textNGG0901"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="총중량"
            android:textSize="14sp"
            android:textColor="#9e9e9e"
            app:layout_constraintStart_toStartOf="@+id/textNGG06"
            app:layout_constraintTop_toBottomOf="@+id/textNGG06" />

        <TextView
            android:id="@+id/tvNGG0901"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textColor="#616161"
            app:layout_constraintTop_toTopOf="@+id/textNGG0901"
            app:layout_constraintStart_toEndOf="@+id/barrier" />
        <TextView
            android:id="@+id/textNGGK04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="실총중량"
            android:textSize="14sp"
            android:textColor="#9e9e9e"
            app:layout_constraintStart_toStartOf="@+id/textNGG0901"
            app:layout_constraintTop_toBottomOf="@+id/textNGG0901" />

        <TextView
            android:id="@+id/tvNGGK04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="14sp"
            android:textColor="#616161"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textNGGK04"
            app:layout_constraintStart_toEndOf="@+id/barrier" />
        <TextView
            android:id="@+id/tvNGG07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="11,500,000 원"
            android:textSize="14sp"
            android:layout_marginEnd="3dp"
            android:textStyle="bold"
            android:textColor="#616161"
            app:layout_constraintEnd_toStartOf="@id/btn"
            app:layout_constraintTop_toBottomOf="@+id/textNGG0901"
            />

        <TextView
            android:id="@+id/tvNGG05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:text="(단가 : 45,000 원)"
            android:textSize="14sp"

            android:textColor="#9e9e9e"
            app:layout_constraintStart_toEndOf="@+id/tvProductName"
            app:layout_constraintTop_toTopOf="@id/tvProductName"
            />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="#bdbdbd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textNGGK04" />

        <ImageView
            android:id="@+id/btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/next_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>