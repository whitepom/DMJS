<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/shape_round10_white"
    android:elevation="1dp"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/layoutSubtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:weightSum="5">

        <TextView
            android:id="@+id/tvItemNo"
            android:layout_width="60dp"
            android:layout_height="21dp"
            android:gravity="center"
            android:text="품목번호"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvItemNum"
            android:layout_width="95dp"
            android:layout_height="21dp"
            android:gravity="center"
            android:background="@drawable/shape_round5_border1"
            android:maxLength="50"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:singleLine="true"
            android:text="GICO01X040A"
            android:textColor="#616161"
            android:textSize="12sp"
            android:layout_weight="1.5"/>

        <TextView
            android:id="@+id/tvClientNo2"
            android:layout_width="60dp"
            android:layout_height="21dp"
            android:gravity="center"
            android:text="두께/폭"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvthicknessWidth"
            android:layout_width="100dp"
            android:layout_height="21dp"
            android:background="@drawable/shape_round5_border1"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="GI.Coil.SGCC..Z04"
            android:textColor="#616161"
            android:textSize="12sp"
            android:layout_weight="1.5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSubtitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutSubtitle1"
        tools:ignore="MissingConstraints"
        android:weightSum="5">

        <TextView
            android:id="@+id/tvClient"
            android:layout_width="60dp"
            android:layout_height="19dp"
            android:gravity="center"
            android:text="배치번호"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvdispatchNum"
            android:layout_width="95dp"
            android:layout_height="21dp"
            android:gravity="center"
            android:background="@drawable/shape_round5_border1"
            android:maxLength="50"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:singleLine="true"
            android:text="G21F270022A"
            android:textColor="#616161"
            android:textSize="12sp"
            android:layout_weight="1.5"/>

        <TextView
            android:id="@+id/tvClientNum"
            android:layout_width="60dp"
            android:layout_height="21dp"
            android:gravity="center"
            android:text="길이/중량"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvlengthWeight"
            android:layout_width="100dp"
            android:layout_height="21dp"
            android:background="@drawable/shape_round5_border1"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="5,5524/199,440"
            android:textColor="#616161"
            android:textSize="12sp"
            android:layout_weight="1.5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSubtitle3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutSubtitle2"
        tools:ignore="MissingConstraints"
        android:weightSum="5">

        <TextView
            android:id="@+id/tvClientName"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="강종"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvsteelGrade"
            android:layout_width="95dp"
            android:layout_height="21dp"
            android:background="@drawable/shape_round5_border1"
            android:gravity="center"
            android:maxLength="50"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:singleLine="true"
            android:text="SGCC"
            android:textColor="#616161"
            android:textSize="12sp"
            android:layout_weight="1.5"/>


        <TextView
            android:id="@+id/tvClientName3"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="수량"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvquantity"
            android:layout_width="100dp"
            android:layout_height="21dp"
            android:background="@drawable/shape_round5_border1"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="1"
            android:textColor="#616161"
            android:textSize="12sp"
            android:layout_weight="1.5"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>