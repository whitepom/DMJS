<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/shape_round10_white"
    android:elevation="1dp"
    android:padding="16dp">

    <!--거래처코드-->
    <TextView
        android:id="@+id/REM_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4574be"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Q202111-001" />

    <!--상호-->
    <TextView
        android:id="@+id/REM_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#616161"
        android:textSize="20dp"
        android:maxLength="14"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/REM_01"
        tools:text="문성상회문성상회문성상회" />


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#9e9e9e"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/REM_01"
        android:text="지역" />


    <TextView
        android:id="@+id/REM_04"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="#616161"
        android:textSize="16dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"

        app:layout_constraintStart_toStartOf="@+id/REM_03"
       app:layout_constraintTop_toTopOf="@+id/text1"
        app:layout_constraintBottom_toBottomOf="@+id/text1"
        tools:text="광주" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#9e9e9e"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        android:text="공사명" />

    <TextView
        android:id="@+id/REM_03"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="#616161"
        android:textSize="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/text2"
        app:layout_constraintTop_toTopOf="@+id/text2"
        app:layout_constraintBottom_toBottomOf="@+id/text2"
        tools:text="출고현황 테스트" />



    <!-- 작성일자 -->
    <TextView
        android:id="@+id/tvTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="수주일자"
        android:textStyle="bold"
        android:textColor="#9e9e9e"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/REM_03"
        app:layout_constraintEnd_toStartOf="@+id/REM_06"
        app:layout_constraintTop_toTopOf="@+id/REM_03" />
    <!-- 작성일자 -->
    <TextView
        android:id="@+id/REM_06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9e9e9e"
        android:textStyle="bold"
        android:textSize="14dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvTextDate"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="2020.04.01" />

</androidx.constraintlayout.widget.ConstraintLayout>